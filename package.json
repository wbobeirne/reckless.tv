    "ts-node": "8.6.2",
    "webpack-dev-server": "3.10.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --quiet"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,html,json,css,scss,md}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ]
  }
