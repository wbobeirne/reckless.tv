{
  "name": "reckless-tv",
  "version": "0.0.1",
  "author": "Will O'Beirne <wbobeirne@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -n server,client 'npm run dev:server' 'npm run dev:client'",
    "dev:server": "DEBUG=true nodemon",
    "dev:client": "webpack-dev-server --config=./webpack.config.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "webpack --mode production --config=./webpack.config.ts",
    "heroku-postbuild": "yarn build",
    "start": "NODE_ENV=production node build/index.js"
  },
  "dependencies": {
    "@babel/core": "7.8.6",
    "@babel/preset-env": "7.8.6",
